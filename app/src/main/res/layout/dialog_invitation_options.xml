<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/invitation_sms"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:text="@string/einladen_per_sms"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/zentea_darkgreen"
        android:drawableEnd="@drawable/ic_forum_black_24dp"
        android:textColor="@color/zxing_status_text"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/invitation_nfc"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:text="@string/einladen_per_nfc"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/invitation_sms"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/zentea_darkgreen"
        android:drawableEnd="@drawable/ic_nfc_black_24dp"
        android:textColor="@color/zxing_status_text"
        android:visibility="visible"
        />
</RelativeLayout>